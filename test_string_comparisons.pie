} else {
    output("Password is not longer than 8 characters", string);
}

// Test 6: String comparison in conditional logic
string user_role = "admin";
string access_level = "read";

if(user_role == "admin"){
    output("User has admin privileges", string);
    if(access_level == "read"){
        output("Access level is read", string);
    } else if(access_level == "write"){
        output("Access level is write", string);
    } else {
        output("Unknown access level", string);
    }
} else if(user_role == "user"){
    output("User has standard privileges", string);
} else {
    output("Unknown user role", string);
}

