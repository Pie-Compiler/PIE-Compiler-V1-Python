// Comprehensive test for string comparisons and operations

// Test 1: Basic string equality comparisons
string name1 = "John Doe";
string name2 = "John Doe";
string name3 = "Jane Doe";

if(name1 == name2){
    output("name1 equals name2", string);
} else {
    output("name1 does not equal name2", string);
}

if(name1 == name3){
    output("name1 equals name3", string);
} else {
    output("name1 does not equal name3", string);
}

if(name1 != name3){
