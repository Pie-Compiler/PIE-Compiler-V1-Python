// Test 2: String ordering comparisons
string alpha1 = "apple";
string alpha2 = "banana";
string alpha3 = "cherry";

if(alpha1 < alpha2){
    output("apple comes before banana (correct!)", string);
} else {
    output("apple does not come before banana", string);
}

if(alpha2 > alpha1){
    output("banana comes after apple (correct!)", string);
} else {
    output("banana does not come after apple", string);
}

if(alpha1 <= alpha2){
    output("apple is less than or equal to banana", string);
} else {
    output("apple is not less than or equal to banana", string);
}

if(alpha2 >= alpha1){
    output("banana is greater than or equal to apple", string);
} else {
    output("banana is not greater than or equal to apple", string);
}

