//A file to show how to create functions in PIE

//string function to check if a string is long
string isLong(string myString){
	if(myString>5){ //PIE auctomatically compares string lengths when using comparison operators between strings and integers
		return "This string is long";
	}else{
		return "This string is not long";
	}
}

//int function to add two integers
int addInts(int a, int b){
	return a + b;
}

//float function to multiply two floats
float multiplyFloats(float x, float y){
	return x * y;
}


//char function to get first character of a string
char getGrade(float grade){
	if(grade >= 90.0){
		return 'A';
	}else if(grade >= 80.0){
		return 'B';
	}else if(grade >= 70.0){
		return 'C';
	}else if(grade >= 60.0){
		return 'D';
	}else{
		return 'F';
	}
}

