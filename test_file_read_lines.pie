// Test file_read_lines with different parameter combinations

// First, create a test file with multiple lines
file f = file_open("test_lines.txt", "w");
if (f != null) {
    file_write(f, "Line 1: First line\n");
    file_write(f, "Line 2: Second line\n");
    file_write(f, "Line 3: Third line\n");
    file_write(f, "Line 4: Fourth line\n");
    file_write(f, "Line 5: Fifth line\n");
    file_write(f, "Line 6: Sixth line\n");
    file_write(f, "Line 7: Seventh line\n");
    file_write(f, "Line 8: Eighth line\n");
    file_write(f, "Line 9: Ninth line\n");
    file_write(f, "Line 10: Tenth line\n");
    file_close(f);
    output("Test file created successfully", string);
}

// Test 1: Read all lines
output("\n=== Test 1: Read all lines ===", string);
f = file_open("test_lines.txt", "r");
if (f != null) {
    string allLines[] = file_read_lines(f);
    int count = arr_size(allLines);
    output("Total lines: " + count, string);
    for (int i = 0; i < count; i = i + 1) {
        output(allLines[i], string);
    }
    file_close(f);
}

